---
import '../styles/global.css';
import Navigation from '../components/Navigation.astro';
---

<html lang="fr">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Niveau 11 - Blob Perlin Noise | Three.js</title>
	</head>
	<body class="bg-gray-900 overflow-hidden">
		<Navigation />

		<canvas id="canvas3d" class="w-full h-screen"></canvas>
	</body>
</html>

<script>
	// Importation des bibliothèques nécessaires
	import * as THREE from 'three';
	import { gsap } from 'gsap';

	// === CONFIGURATION DE BASE ===
	
	// Récupération du canvas HTML
	const canvas = document.getElementById('canvas3d') as HTMLCanvasElement;
	
	// Création de la scène
	const scene = new THREE.Scene();
	scene.background = new THREE.Color(0x0a0a1a);
	scene.fog = new THREE.Fog(0x0a0a1a, 5, 30);

	// Configuration de la caméra
	const camera = new THREE.PerspectiveCamera(
		75,
		window.innerWidth / window.innerHeight,
		0.1,
		1000
	);
	camera.position.z = 5;

	// Configuration du renderer
	const renderer = new THREE.WebGLRenderer({ 
		canvas,
		antialias: true,
		alpha: true
	});
	renderer.setSize(window.innerWidth, window.innerHeight);
	renderer.setPixelRatio(window.devicePixelRatio);

	// === SHADERS PERSONNALISÉS AVEC PERLIN NOISE ===
	
	// Vertex Shader : calcule la déformation du blob avec Perlin Noise
	const vertexShader = `
		// Uniforms (variables globales passées depuis JavaScript)
		uniform float uTime; // Temps pour l'animation
		uniform float uNoiseStrength; // Intensité de la déformation
		uniform float uNoiseScale; // Échelle du bruit Perlin
		uniform vec2 uMouse; // Position de la souris
		
		// Varyings (variables transmises au fragment shader)
		varying vec3 vNormal;
		varying vec3 vPosition;
		varying float vDisplacement;
		
		// Fonction de bruit Perlin 3D (génère des valeurs pseudo-aléatoires fluides)
		vec3 mod289(vec3 x) { return x - floor(x * (1.0 / 289.0)) * 289.0; }
		vec4 mod289(vec4 x) { return x - floor(x * (1.0 / 289.0)) * 289.0; }
		vec4 permute(vec4 x) { return mod289(((x*34.0)+1.0)*x); }
		vec4 taylorInvSqrt(vec4 r) { return 1.79284291400159 - 0.85373472095314 * r; }
		
		float snoise(vec3 v) {
			const vec2 C = vec2(1.0/6.0, 1.0/3.0);
			const vec4 D = vec4(0.0, 0.5, 1.0, 2.0);
			
			vec3 i  = floor(v + dot(v, C.yyy));
			vec3 x0 = v - i + dot(i, C.xxx);
			
			vec3 g = step(x0.yzx, x0.xyz);
			vec3 l = 1.0 - g;
			vec3 i1 = min(g.xyz, l.zxy);
			vec3 i2 = max(g.xyz, l.zxy);
			
			vec3 x1 = x0 - i1 + C.xxx;
			vec3 x2 = x0 - i2 + C.yyy;
			vec3 x3 = x0 - D.yyy;
			
			i = mod289(i);
			vec4 p = permute(permute(permute(
				i.z + vec4(0.0, i1.z, i2.z, 1.0))
				+ i.y + vec4(0.0, i1.y, i2.y, 1.0))
				+ i.x + vec4(0.0, i1.x, i2.x, 1.0));
			
			float n_ = 0.142857142857;
			vec3 ns = n_ * D.wyz - D.xzx;
			
			vec4 j = p - 49.0 * floor(p * ns.z * ns.z);
			
			vec4 x_ = floor(j * ns.z);
			vec4 y_ = floor(j - 7.0 * x_);
			
			vec4 x = x_ *ns.x + ns.yyyy;
			vec4 y = y_ *ns.x + ns.yyyy;
			vec4 h = 1.0 - abs(x) - abs(y);
			
			vec4 b0 = vec4(x.xy, y.xy);
			vec4 b1 = vec4(x.zw, y.zw);
			
			vec4 s0 = floor(b0)*2.0 + 1.0;
			vec4 s1 = floor(b1)*2.0 + 1.0;
			vec4 sh = -step(h, vec4(0.0));
			
			vec4 a0 = b0.xzyw + s0.xzyw*sh.xxyy;
			vec4 a1 = b1.xzyw + s1.xzyw*sh.zzww;
			
			vec3 p0 = vec3(a0.xy, h.x);
			vec3 p1 = vec3(a0.zw, h.y);
			vec3 p2 = vec3(a1.xy, h.z);
			vec3 p3 = vec3(a1.zw, h.w);
			
			vec4 norm = taylorInvSqrt(vec4(dot(p0,p0), dot(p1,p1), dot(p2,p2), dot(p3,p3)));
			p0 *= norm.x;
			p1 *= norm.y;
			p2 *= norm.z;
			p3 *= norm.w;
			
			vec4 m = max(0.6 - vec4(dot(x0,x0), dot(x1,x1), dot(x2,x2), dot(x3,x3)), 0.0);
			m = m * m;
			return 42.0 * dot(m*m, vec4(dot(p0,x0), dot(p1,x1), dot(p2,x2), dot(p3,x3)));
		}
		
		void main() {
			// Position de base du vertex
			vPosition = position;
			
			// Calcul de plusieurs octaves de bruit Perlin pour plus de détails
			vec3 noisePos = position * uNoiseScale;
			
			// Première octave (base)
			float noise = snoise(noisePos + uTime * 0.5);
			
			// Deuxième octave (détails moyens)
			noise += snoise(noisePos * 2.0 + uTime * 0.3) * 0.5;
			
			// Troisième octave (fins détails)
			noise += snoise(noisePos * 4.0 + uTime * 0.2) * 0.25;
			
			// Influence de la souris sur la déformation
			float mouseInfluence = length(uMouse - position.xy) * 0.5;
			noise *= (1.0 + sin(mouseInfluence * 2.0) * 0.3);
			
			// Déplacement du vertex le long de sa normale
			vDisplacement = noise * uNoiseStrength;
			vec3 newPosition = position + normal * vDisplacement;
			
			// Transmission des normales au fragment shader
			vNormal = normalize(normalMatrix * normal);
			
			// Position finale du vertex
			gl_Position = projectionMatrix * modelViewMatrix * vec4(newPosition, 1.0);
		}
	`;

	// Fragment Shader : coloration avec dégradés basés sur la déformation
	const fragmentShader = `
		// Uniforms
		uniform float uTime;
		uniform vec3 uColor1; // Couleur principale
		uniform vec3 uColor2; // Couleur secondaire
		uniform vec3 uColor3; // Couleur d'accent
		
		// Varyings reçus du vertex shader
		varying vec3 vNormal;
		varying vec3 vPosition;
		varying float vDisplacement;
		
		void main() {
			// Calcul de l'angle entre la normale et la caméra (effet Fresnel)
			vec3 viewDirection = normalize(cameraPosition - vPosition);
			float fresnel = pow(1.0 - dot(vNormal, viewDirection), 3.0);
			
			// Mélange de couleurs basé sur la déformation et la position
			float colorMix1 = (vDisplacement + 1.0) * 0.5;
			float colorMix2 = sin(vPosition.y * 3.0 + uTime) * 0.5 + 0.5;
			
			// Interpolation entre les 3 couleurs
			vec3 color = mix(uColor1, uColor2, colorMix1);
			color = mix(color, uColor3, colorMix2);
			
			// Ajout de l'effet Fresnel (brillance sur les bords)
			color += fresnel * vec3(0.3, 0.6, 1.0) * 0.5;
			
			// Ajout de spécularité basée sur la déformation
			float specular = pow(max(0.0, vDisplacement), 2.0) * 0.3;
			color += vec3(specular);
			
			// Couleur finale avec alpha (transparence partielle sur les bords)
			gl_FragColor = vec4(color, 1.0 - fresnel * 0.3);
		}
	`;

	// === CRÉATION DU BLOB ===
	
	// Géométrie : IcosahedronGeometry avec haute subdivision pour un blob lisse
	const geometry = new THREE.IcosahedronGeometry(2, 128);
	
	// Matériau avec shaders personnalisés
	const material = new THREE.ShaderMaterial({
		vertexShader,
		fragmentShader,
		uniforms: {
			uTime: { value: 0 },
			uNoiseStrength: { value: 0.3 },
			uNoiseScale: { value: 1.5 },
			uMouse: { value: new THREE.Vector2(0, 0) },
			uColor1: { value: new THREE.Color(0xff6b9d) }, // Rose
			uColor2: { value: new THREE.Color(0x4ecdc4) }, // Cyan
			uColor3: { value: new THREE.Color(0xffe66d) }  // Jaune
		},
		transparent: true,
		side: THREE.DoubleSide,
		wireframe: false
	});
	
	// Création du mesh blob
	const blob = new THREE.Mesh(geometry, material);
	scene.add(blob);

	// === VERSION WIREFRAME DU BLOB ===
	
	// Clone du blob en mode wireframe pour un effet de surimpression
	const wireframeMaterial = new THREE.ShaderMaterial({
		vertexShader,
		fragmentShader,
		uniforms: {
			uTime: { value: 0 },
			uNoiseStrength: { value: 0.3 },
			uNoiseScale: { value: 1.5 },
			uMouse: { value: new THREE.Vector2(0, 0) },
			uColor1: { value: new THREE.Color(0xffffff) },
			uColor2: { value: new THREE.Color(0xffffff) },
			uColor3: { value: new THREE.Color(0xffffff) }
		},
		transparent: true,
		wireframe: true,
		opacity: 0.2
	});
	
	const wireframeBlob = new THREE.Mesh(geometry, wireframeMaterial);
	wireframeBlob.scale.set(1.01, 1.01, 1.01); // Légèrement plus grand
	scene.add(wireframeBlob);

	// === LUMIÈRES ===
	
	const ambientLight = new THREE.AmbientLight(0x404080, 0.5);
	scene.add(ambientLight);
	
	const pointLight1 = new THREE.PointLight(0xff6b9d, 3, 20);
	pointLight1.position.set(-3, 3, 3);
	scene.add(pointLight1);
	
	const pointLight2 = new THREE.PointLight(0x4ecdc4, 3, 20);
	pointLight2.position.set(3, -3, 3);
	scene.add(pointLight2);

	// === ANIMATIONS GSAP ===
	
	// Animation de rotation du blob
	gsap.to(blob.rotation, {
		y: Math.PI * 2,
		duration: 20,
		repeat: -1,
		ease: 'none'
	});
	
	// Animation de l'intensité du bruit
	gsap.to(material.uniforms.uNoiseStrength, {
		value: 0.3,
		duration: 3,
		yoyo: true,
		repeat: -1,
		ease: 'sine.inOut'
	});
	
	// Animation de la caméra (zoom pulsé)
	gsap.to(camera.position, {
		z: 6,
		duration: 4,
		yoyo: true,
		repeat: -1,
		ease: 'sine.inOut'
	});

	// === INTERACTION SOURIS ===
	
	const mouse = new THREE.Vector2();
	
	window.addEventListener('mousemove', (event) => {
		// Normalisation de la position de la souris (-1 à 1)
		mouse.x = (event.clientX / window.innerWidth) * 2 - 1;
		mouse.y = -(event.clientY / window.innerHeight) * 2 + 1;
		
		// Mise à jour de l'uniform de la souris pour les shaders
		material.uniforms.uMouse.value.set(mouse.x * 2, mouse.y * 2);
		wireframeMaterial.uniforms.uMouse.value.set(mouse.x * 2, mouse.y * 2);
	});

	// === GESTION DU REDIMENSIONNEMENT ===
	
	window.addEventListener('resize', () => {
		camera.aspect = window.innerWidth / window.innerHeight;
		camera.updateProjectionMatrix();
		renderer.setSize(window.innerWidth, window.innerHeight);
	});

	// === BOUCLE D'ANIMATION ===
	
	let time = 0;
	
	function animate() {
		requestAnimationFrame(animate);
		time += 0.01;
		
		// Mise à jour du temps dans les shaders
		material.uniforms.uTime.value = time;
		wireframeMaterial.uniforms.uTime.value = time;
		
		// Rotation automatique du wireframe (opposée au blob principal)
		wireframeBlob.rotation.y -= 0.002;
		wireframeBlob.rotation.x += 0.001;
		
		// Animation des lumières (mouvement circulaire)
		pointLight1.position.x = Math.cos(time * 0.5) * 4;
		pointLight1.position.z = Math.sin(time * 0.5) * 4;
		
		pointLight2.position.x = Math.sin(time * 0.3) * 4;
		pointLight2.position.z = Math.cos(time * 0.3) * 4;
		
		// La caméra regarde toujours le centre
		camera.lookAt(0, 0, 0);
		
		// Rendu de la scène
		renderer.render(scene, camera);
	}
	
	// Démarrage de l'animation
	animate();
</script>
